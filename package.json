{
  "name": "eightblock",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm services:start && pnpm -r --parallel dev",
    "services:start": "docker compose up -d redis postgres && echo 'Waiting for services...' && sleep 3",
    "services:stop": "docker compose down",
    "services:logs": "docker compose logs -f",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "dev:frontend": "pnpm --filter ./frontend dev",
    "dev:backend": "pnpm --filter ./backend dev"
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  }
}
